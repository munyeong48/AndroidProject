<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".RemoteConfigActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100px"
        app:srcCompat="@drawable/goldenplaneticon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:background="@drawable/round"
        android:hint="사용자 명"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="평점 입력"
        android:textAlignment="center"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:layout_marginBottom="90dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:textColorHint="@android:color/white"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:text="제출 버튼"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="텍스트 뷰"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220px" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom ="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:id="@+id/sns_layout">

        <ImageView
            android:id="@+id/imageView_one_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="0px"
            android:layout_marginLeft="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_one" />

        <ImageView
            android:id="@+id/imageView_two_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_two" />

        <ImageView
            android:id="@+id/imageView_three_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_three" />

        <ImageView
            android:id="@+id/imageView_four_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_four" />

        <ImageView
            android:id="@+id/imageView_five_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_five" />

        <ImageView
            android:id="@+id/imageView_six_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            app:srcCompat="@drawable/icon_six" />
    </LinearLayout>
</RelativeLayout>